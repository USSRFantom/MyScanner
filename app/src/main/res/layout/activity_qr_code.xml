<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/depositphotosgadgets"
    tools:context=".Screens.QrCode.QrCode">

    <ImageView
        android:id="@+id/imageViewqr_code"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Штрих код вашей корзины"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewPay1"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/pay_cash_icon" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewPay2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/icon_pay_card" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewPay3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/gpay"/>

    </LinearLayout>

    </LinearLayout>
