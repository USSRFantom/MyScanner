<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".Screens.QrCode.QrCode">

    <ImageView
        android:id="@+id/imageViewqr_code"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="К оплате:"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@color/grey"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@color/grey"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewPay1"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@color/grey"
            android:src="@drawable/imgpay1" />

        <TextView
            android:id="@+id/textViewPay1"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="Оплатить наличными"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewPay2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/pay2"
            android:background="@color/grey"/>

        <TextView
            android:id="@+id/textViewPay2"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="Оплатить картой"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewPay3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/pay3"
            android:background="@color/grey"/>

        <TextView
            android:id="@+id/textViewPay3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="интернет эквайринг"
            android:gravity="center" />
    </LinearLayout>

    </LinearLayout>
